                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_x="91dp"
                android:layout_y="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_namee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="4dp"
                android:layout_y="37dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tv_versionn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="74dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tv_versioo"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_x="4dp"
                android:layout_y="104dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/ed_oficiall"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_x="73dp"
                android:layout_y="102dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/ed_particularr"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_x="73dp"
                android:layout_y="132dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </AbsoluteLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>


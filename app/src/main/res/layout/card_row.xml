<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/titulo"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_x="45dp"
            android:layout_y="14dp"
            android:text="Planes"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_clase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="50dp"
            android:text="Titulo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/txt_Extrangero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="74dp"
            android:text="Descripcion"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/txt_oficial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="104dp"
            android:text="Imagen"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/ed_titulo"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_x="72dp"
            android:layout_y="51dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/ed_descr"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_x="74dp"
            android:layout_y="77dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <ImageView
            android:id="@+id/ed_img"
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:layout_x="73dp"
            android:layout_y="100dp" />


    </AbsoluteLayout>
    </android.support.v7.widget.CardView>
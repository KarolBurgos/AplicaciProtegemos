            app:searchSuggestionIcon="@android:integer/config_longAnimTime">

        </com.miguelcatalan.materialsearchview.MaterialSearchView>
-->

    </android.support.design.widget.AppBarLayout>


    <include
        android:id="@+id/include"
        layout="@layout/contex" />



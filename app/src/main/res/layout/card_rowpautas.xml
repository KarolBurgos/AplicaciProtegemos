<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/actionModeSplitBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="106dp"
                android:layout_y="115dp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="177dp"
                android:layout_height="139dp"
                android:layout_x="63dp"
                android:layout_y="8dp"
                card_view:srcCompat="@drawable/bus" />

            <TextView
                android:id="@+id/tv_namee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="43dp"
                android:layout_y="160dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tv_versionn"
                android:layout_width="292dp"
                android:layout_height="78dp"
                android:layout_x="29dp"
                android:layout_y="195dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/leerpautas"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_x="194dp"
                android:layout_y="282dp"
                android:text="Leer mas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_x="44dp"
                android:layout_y="271dp" />

        </AbsoluteLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>

